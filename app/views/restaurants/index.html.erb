<div class="container">
  <div class="row">
    <div class="col">
      <h1>Here is the list of all restaurants</h1>
      <ul>
        <% @restaurants.each do |restaurant| %>
          <li><%= link_to restaurant.name, restaurant_path(restaurant) %></li>
        <% end %>
      </ul>

      <%= link_to "Add a restaurant", restaurants_new_path %>
    </div>
  </div>
</div>




