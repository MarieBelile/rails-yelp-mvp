<div class="container">
  <div class="row">
    <div class="col">
      <h1>Here is the detail of the restaurant.name</h1>

      <h2><%= @restaurant.name %></h2>
      <p><%= @restaurant.address %></p>
      <p><%= @restaurant.category %></p>
      <p><%= @restaurant.phone_number %></p>
      <ul class="list-group">
        <% @restaurant.reviews.each do |review| %>
          <li class="list-group-item"><%= review.content %>  <%= "⭐️" * review.rating %></li>
        <% end %>
      </ul>
      <div><%= link_to "Go back", restaurants_path %></div>
      <div><%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %></div>

    </div>
  </div>
</div>




